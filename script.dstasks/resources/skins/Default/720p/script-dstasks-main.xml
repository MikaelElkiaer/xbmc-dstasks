<window id="5000">
  <allowoverlay>no</allowoverlay>
  <defaultcontrol always="true">201</defaultcontrol>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <controls>
    <control type="group">
      <description>Background</description>
      <control type="image">
        <description>Normal Default Background Image</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>1280</width>
        <height>720</height>
        <aspectratio>scale</aspectratio>
        <texture>$INFO[Skin.CurrentTheme,special://skin/backgrounds/,.jpg]</texture>
        <visible>![Skin.HasSetting(UseCustomBackground) + !IsEmpty(Skin.String(CustomBackgroundPath))]</visible>
        <include>VisibleFadeEffect</include>
      </control>
      <control type="image">
        <description>User Set Background Image</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>1280</width>
        <height>720</height>
        <aspectratio>scale</aspectratio>
        <texture>$INFO[Skin.String(CustomBackgroundPath)]</texture>
        <visible>Skin.HasSetting(UseCustomBackground) + !IsEmpty(Skin.String(CustomBackgroundPath))</visible>
        <include>VisibleFadeEffect</include>
      </control>
    </control>
    <control type="group">
      <description>Panel</description>
      <control type="image">
        <posx>0</posx>
        <posy>100r</posy>
        <width>1280</width>
        <height>100</height>
        <texture>floor.png</texture>
        <animation effect="slide" start="0,10" end="0,0" time="200" condition="Window.Previous(Home)">WindowOpen</animation>
        <animation effect="slide" start="0,0" end="0,10" time="200" condition="Window.Next(Home)">WindowClose</animation>
      </control>
      <include>VisibleFadeEffect</include>
      <control type="image">
        <posx>75</posx>
        <posy>60</posy>
        <width>1130</width>
        <height>600</height>
        <texture border="15">confluence-textures/ContentPanel.png</texture>
      </control>
      <control type="image">
        <posx>75</posx>
        <posy>652</posy>
        <width>1130</width>
        <height>64</height>
        <texture border="15">confluence-textures/ContentPanelMirror.png</texture>
      </control>
    </control>
    <control type="group">
      <description>Task list</description>
      <visible>Control.IsVisible(201)</visible>
      <include>VisibleFadeEffect</include>
      <control type="list" id="201">
        <posx>95</posx>
        <posy>78</posy>
        <width>1080</width>
        <height>561</height>
        <onposx>2</onposx>
        <onup>201</onup>
        <ondown>201</ondown>
        <pagecontrol>60</pagecontrol>
        <scrolltime>200</scrolltime>
        <itemlayout height="40" width="1080">
          <control type="progress">
            <posx>0</posx>
            <posy>0</posy>
            <width>1070</width>
            <height>40</height>
            <texturebg>confluence-textures/OSDProgressBack.png</texturebg>
            <midtexture border="7,7,7,7">confluence-textures/OSDProgressMidNF.png</midtexture>
            <info>ListItem.Property(Progress)</info>
          </control>
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1080</width>
            <height>41</height>
            <texture border="0,2,0,2">confluence-textures/MenuItemNF.png</texture>
          </control>
          <control type="label">
            <posx>5</posx>
            <posy>0</posy>
            <width>1005</width>
            <height>40</height>
            <font>font13</font>
            <textcolor>grey2</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <posx>1040</posx>
            <posy>0</posy>
            <width>950</width>
            <height>40</height>
            <font>font12</font>
            <textcolor>grey2</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>right</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label2]</label>
          </control>
          <control type="image">
            <posx>1050</posx>
            <posy>14</posy>
            <width>16</width>
            <height>16</height>
            <texture>$INFO[ListItem.Icon]</texture>
          </control>
        </itemlayout>
        <focusedlayout height="40" width="1080">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1080</width>
            <height>41</height>
            <texture border="0,2,0,2">confluence-textures/MenuItemNF.png</texture>
            <visible>!Control.HasFocus(201)</visible>
            <include>VisibleFadeEffect</include>
          </control>
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1080</width>
            <height>41</height>
            <texture border="0,2,0,2">confluence-textures/MenuItemFO.png</texture>
            <visible>Control.HasFocus(201)</visible>
            <include>VisibleFadeEffect</include>
          </control>
          <control type="image">
            <posx>875</posx>
            <posy>4</posy>
            <width>200</width>
            <height>33</height>
            <texture border="0,0,14,0">confluence-textures/MediaItemDetailBG.png</texture>
            <visible>Control.HasFocus(201) + !IsEmpty(ListItem.Label2)</visible>
          </control>
          <control type="progress">
            <posx>0</posx>
            <posy>0</posy>
            <width>1070</width>
            <height>40</height>
            <texturebg>confluence-textures/OSDProgressBack.png</texturebg>
            <midtexture border="7,7,7,7">confluence-textures/OSDProgressMidFO.png</midtexture>
            <info>ListItem.Property(Progress)</info>
          </control>
          <control type="label">
            <posx>5</posx>
            <posy>0</posy>
            <width>1005</width>
            <height>40</height>
            <font>font13</font>
            <textcolor>white</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <posx>1040</posx>
            <posy>0</posy>
            <width>950</width>
            <height>40</height>
            <font>font12</font>
            <textcolor>white</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>right</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label2]</label>
          </control>
          <control type="image">
            <posx>1050</posx>
            <posy>14</posy>
            <width>16</width>
            <height>16</height>
            <texture>$INFO[ListItem.Icon]</texture>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <description>Task list scrollbar</description>
        <posx>1170</posx>
        <posy>80</posy>
        <width>25</width>
        <height>550</height>
        <texturesliderbackground border="0,14,0,14">confluence-textures/ScrollBarV.png</texturesliderbackground>
        <texturesliderbar border="0,14,0,14">confluence-textures/ScrollBarV_bar.png</texturesliderbar>
        <texturesliderbarfocus border="0,14,0,14">confluence-textures/ScrollBarV_bar_focus.png</texturesliderbarfocus>
        <textureslidernib>confluence-textures/ScrollBarNib.png</textureslidernib>
        <textureslidernibfocus>confluence-textures/ScrollBarNib.png</textureslidernibfocus>
        <onposx>50</onposx>
        <onright>2</onright>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <visible>Control.IsVisible(201)</visible>
      </control>
    </control>
    <control type="label">
      <description>Clock</description>
      <posx>20r</posx>
      <posy>5</posy>
      <width>200</width>
      <height>30</height>
      <align>right</align>
      <aligny>center</aligny>
      <font>font28_title</font>
      <textcolor>white</textcolor>
      <shadowcolor>black</shadowcolor>
      <label>$INFO[System.Time]</label>
    </control>
  </controls>
</window>
